{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Intentio",
    "version": "2.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "scope": [
          "$APP",
          "$APP/*",
          "$RESOURCE",
          "$RESOURCE/*",
          "$CONFIG",
          "$CONFIG/*",
          "$CONFIG/**/*"
        ]
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "all": true
      },
      "shell": {
        "open": true,
        "scope": [
          {
            "name": "sh",
            "cmd": "sh",
            "args": [
              "-c",
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "cmd",
            "cmd": "cmd",
            "args": [
              "/C",
              {
                "validator": "\\S+"
              }
            ]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "intentio.app",
      "longDescription": "A pomodoro timer.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "./audio/*"
      ],
      "shortDescription": "A pomodoro timer.",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
